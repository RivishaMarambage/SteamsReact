rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStaffOrAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if isOwner(userId) || isStaffOrAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isStaffOrAdmin();
      allow delete: if isAdmin();
    }
    
    match /users/{userId}/data/game_profile {
      allow read, write: if isOwner(userId);
    }

    match /daily_game_winners/{date} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Writes are protected by transaction logic in code
    }

    match /menu_items/{menuItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /addons/{addonId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /addon_categories/{addonCategoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /loyalty_levels/{loyaltyLevelId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /orders/{orderId} {
        allow read, write, list: if isStaffOrAdmin();
        allow create: if isSignedIn();
    }

    match /users/{userId}/orders/{orderId} {
      allow read, list: if isOwner(userId) || isStaffOrAdmin();
      allow create: if isOwner(userId) || isStaffOrAdmin();
      allow update: if isOwner(userId) || isStaffOrAdmin();
      allow delete: if false;
    }

    match /users/{userId}/point_transactions/{transactionId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isStaffOrAdmin();
      allow update, delete: if false;
    }

    match /daily_offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /mobile_numbers/{mobileNumber} {
      allow read: if true;
      allow create: if request.resource.data.userId == request.auth.uid;
    }
  }
}
