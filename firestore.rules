rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isStaffOrAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && getUserData().role in ['staff', 'admin'];
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && getUserData().role == 'admin';
    }

    match /users/{userId} {
      // Allow searching for admins or referrers during signup
      allow list: if isSignedIn();
      allow read: if isOwner(userId) || isStaffOrAdmin();
      allow create: if isOwner(userId);
      
      // Allow users to update their own non-protected fields, 
      // AND allow any user to increment points for another user (prototype referral logic)
      allow update: if isOwner(userId) 
        ? (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'loyaltyPoints', 'lifetimePoints', 'loyaltyLevelId']))
        : (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['loyaltyPoints', 'lifetimePoints']));
        
      allow delete: if isAdmin();
    }
    
    match /users/{userId}/data/game_profile {
      allow read, write: if isOwner(userId);
    }

    match /daily_game_winners/{date} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); 
    }

    match /menu_items/{menuItemId} {
      allow read: if true;
      // Relaxed for initial database seeding
      allow write: if isSignedIn();
    }
    
    match /addons/{addonId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /addon_categories/{addonCategoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /loyalty_levels/{loyaltyLevelId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /orders/{orderId} {
        allow read, list: if isStaffOrAdmin();
        allow create: if isSignedIn() 
          && request.resource.data.customerId == request.auth.uid
          && request.resource.data.status == 'Placed';
        allow update: if isStaffOrAdmin();
        allow delete: if isAdmin();
    }

    match /users/{userId}/orders/{orderId} {
      allow read, list: if isOwner(userId) || isStaffOrAdmin();
      allow create: if isOwner(userId) && request.resource.data.status == 'Placed';
      allow update: if isStaffOrAdmin();
      allow delete: if false;
    }

    match /users/{userId}/point_transactions/{transactionId} {
      allow read, list: if isOwner(userId) || isAdmin();
      // Allow creation for referrals
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /daily_offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /mobile_numbers/{mobileNumber} {
      allow read: if isSignedIn(); 
      allow create: if request.resource.data.userId == request.auth.uid;
    }
  }
}