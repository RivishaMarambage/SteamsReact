rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserRole() == 'admin';
    }
    
    function isStaff() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (getUserRole() == 'staff' || getUserRole() == 'admin');
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow list: if isAdmin();
    }

    match /menu_items/{menuItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /loyalty_levels/{loyaltyLevelId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /users/{userId}/orders/{orderId} {
      allow read, create, update, delete: if isOwner(userId) || isStaff();
      allow list: if isOwner(userId) || isStaff();
    }
    
    // A root collection of all orders for admin and staff analytics/management
    match /orders/{orderId} {
        allow read, write: if isStaff();
        allow list: if isStaff();
    }
  }
}
