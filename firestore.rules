
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Safely reads the user's role from their profile in the /users collection.
    // Returns null if the document or role does not exist.
    function getUserRole() {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);
      if (exists(userDocPath) && 'role' in get(userDocPath).data) {
        return get(userDocPath).data.role;
      }
      return null;
    }

    function isAdmin() {
      let role = getUserRole();
      return isSignedIn() && role == 'admin';
    }

    function isStaff() {
      let role = getUserRole();
      return isSignedIn() && (role == 'staff' || role == 'admin');
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if isAdmin() || isOwner(userId);
      allow write: if (request.resource.data.id == request.auth.uid && !exists(/databases/$(database)/documents/users/$(request.auth.uid))) || (isAdmin() || isOwner(userId));
      allow delete: if isAdmin();
    }

    match /menu_items/{menuItemId} {
      allow read: if true; // Menu is public
      allow write: if isAdmin(); // Only admins can create, update, or delete menu items
    }
    
    match /addons/{addonId} {
      allow read: if true; // Addons are public
      allow write: if isAdmin(); // Only admins can manage addons
    }
    
    match /addon_categories/{addonCategoryId} {
      allow read: if true; // Addon categories are public
      allow write: if isAdmin(); // Only admins can manage addon categories
    }

    match /categories/{categoryId} {
      allow read: if true; // Categories are public
      allow write: if isAdmin(); // Only admins can manage categories
    }
    
    match /loyalty_levels/{loyaltyLevelId} {
      allow read: if true; // Loyalty levels are public
      allow write: if isAdmin(); // Only admins can manage loyalty levels
    }
    
    // This is the root collection for all orders, used by staff and admins
    match /orders/{orderId} {
        allow read, write: if isStaff(); // Staff/admins can read and update any order (e.g., to change status)
        allow list: if isStaff(); // Staff/admins can list all orders for the management dashboard
        allow create: if isSignedIn(); // A customer creates an order here
    }

    // This is the customer's private view of their own orders
    match /users/{userId}/orders/{orderId} {
      allow read, list, create: if isOwner(userId); // A user can see their own orders
      allow update: if isOwner(userId) || isStaff(); // A user can update their order, and so can staff to update status.
      allow delete: if false; // Users should not be able to modify their past orders
    }

    // A user's private history of point transactions
    match /users/{userId}/point_transactions/{transactionId} {
      allow read, list: if isOwner(userId) || isAdmin(); // User can read their own history, admins can read anyone's.
      allow create: if isOwner(userId) || isStaff(); // A user's actions (or staff on their behalf) create transactions.
      allow update, delete: if false; // Transactions are immutable.
    }

    match /daily_offers/{offerId} {
      allow read: if true; // Daily offers are public
      allow write: if isAdmin(); // Only admins can create, update, or delete daily offers
    }
    
    // New rules for the public mobile number lookup collection
    match /mobile_numbers/{mobileNumber} {
      // Allow an unauthenticated user to check if a number exists.
      allow get: if true;

      // Allow an authenticated user to create their own lookup document.
      // This happens right after sign-up.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Disallow other operations for security.
      allow update, delete, list: if false;
    }
  }
}
