rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isStaffOrAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && getUserData().role in ['staff', 'admin'];
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && getUserData().role == 'admin';
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if isOwner(userId) || isStaffOrAdmin();
      allow create: if isOwner(userId);
      
      // SECURITY V-02: Prevent users from escalating their own role or giving themselves points
      // We use diff() to ensure protected fields are not modified by the user
      allow update: if isOwner(userId) 
        ? (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'loyaltyPoints', 'lifetimePoints', 'loyaltyLevelId']))
        : isStaffOrAdmin();
        
      allow delete: if isAdmin();
    }
    
    match /users/{userId}/data/game_profile {
      allow read, write: if isOwner(userId);
    }

    match /daily_game_winners/{date} {
      allow read: if isSignedIn();
      // Grand prize winners are set via client logic in this prototype, 
      // but restricted by transaction logic in the app.
      allow write: if isSignedIn(); 
    }

    match /menu_items/{menuItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /addons/{addonId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /addon_categories/{addonCategoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /loyalty_levels/{loyaltyLevelId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /orders/{orderId} {
        allow read, list: if isStaffOrAdmin();
        // SECURITY V-03: Users can only create their own orders and only with 'Placed' status
        allow create: if isSignedIn() 
          && request.resource.data.customerId == request.auth.uid
          && request.resource.data.status == 'Placed';
        allow update: if isStaffOrAdmin();
        allow delete: if isAdmin();
    }

    match /users/{userId}/orders/{orderId} {
      allow read, list: if isOwner(userId) || isStaffOrAdmin();
      // SECURITY V-03: Enforce ownership and initial status
      allow create: if isOwner(userId) && request.resource.data.status == 'Placed';
      allow update: if isStaffOrAdmin(); // Only staff can update status
      allow delete: if false;
    }

    match /users/{userId}/point_transactions/{transactionId} {
      allow read, list: if isOwner(userId) || isAdmin();
      // Restricted creation - typically should be server-side
      allow create: if isOwner(userId) || isStaffOrAdmin();
      allow update, delete: if false;
    }

    match /daily_offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /mobile_numbers/{mobileNumber} {
      // SECURITY V-04: Prevent public scraping of phone numbers
      allow read: if isSignedIn(); 
      allow create: if request.resource.data.userId == request.auth.uid;
    }
  }
}